<h3>施設情報の更新</h3>

<%= form_with model: @room, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :room_name ,"施設" %></th>
      <td><%= f.text_field :room_name %></td>
    </tr>

    <tr>
      <th><%= f.label :room_introduction ,"施設紹介" %></th>
      <td><%= f.text_area :room_introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :room_price ,"料金" %></th>
      <td><%= f.text_field :room_price %></td>
    </tr>

    <tr>
      <th><%= f.label :room_address ,"住所" %></th>
      <td><%= f.text_field :room_address %></td>
    </tr>

    <tr>
  <th><%= f.label :image, "施設画像" %></th>
  <td><%= f.file_field :image %></td>
</tr>


  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", room_path(@room) %></li>
    </ul>
  </div>
<% end %>
