<table> 
  <tr>
     <th>画像</th> 
     <td>
       <% if @room.image.attached? %>
       <%= image_tag @room.image,  width: "200", height: "100" %>
      <% else %>
       <%= image_tag asset_path("default_shisetu.png"),  width: "200", height: "100" %>
     <% end %>
    </td>
  </tr>
  <tr>
     <th>施設名</th>
     <td><%= @room.room_name %></td>
  </tr>
  <tr>
     <th>住所</th>
     <td><%= @room.room_address %></td>
  </tr>
  <tr>
     <th>施設紹介</th>
     <td><%= @room.room_introduction %></td>
  </tr>
  <tr>
     <th>料金</th>
     <td><%= @room.room_price %></td>
  </tr>
  <tr>
     <th>作成日</th>
     <td><%= @room.created_at.to_s(:datetime_jp) %></td>
  </tr>
</table>

<p><%= link_to '編集', edit_room_path(@room) %></p>
<p><%= link_to '戻る', request.referer || rooms_path %></p>
