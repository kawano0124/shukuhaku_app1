<h3>新規作成</h3>

<%= form_with model: @room, local: true do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
        <% @room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <th><%= f.label :room_name, "施設名", class: 'required' %></th>
      <td><%= f.text_field :room_name %></td>
    </tr>

    <tr>
      <th><%= f.label :room_introduction, "施設紹介", class: 'required' %></th>
      <td><%= f.text_area :room_introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :room_price, "料金", class: 'required' %></th>
      <td><%= f.number_field :room_price %></td>
    </tr>

    <tr>
      <th><%= f.label :room_address, "住所", class: 'required' %></th>
      <td><%= f.text_field :room_address %></td>
    </tr>

    <tr>
      <th><%= f.label :image, "施設画像" %></th>
      <td><%= f.file_field :image %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "保存" %></li>
      <li><%= link_to "キャンセル", rooms_path %></li>
    </ul>
  </div>
<% end %>
